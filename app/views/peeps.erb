<form action="/peep" method="post">
  <label>Post your peep!
    <input type="text" name="peep" placeholder="What's happening?">
  </label>
  <input type="submit" value="Peep">
</form>

<h3>Peeps</h3>
<ul id='peeps'>
  <% @peeps.each do |peep| %>
  <li>
    <%= current_user.name%> @<%=current_user.username%> : <%= peep.message %> at <%= peep.time %>
  </li>
  <% end %>
</ul>
